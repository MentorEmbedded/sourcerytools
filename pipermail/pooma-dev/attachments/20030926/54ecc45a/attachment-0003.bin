#ifndef SPL_ENGINE_SPARSEENGINE_H
#error "Should be included from SparseEngine.h only!"
#endif

#ifndef SPL_SPARSEOPERATORS_H
#define SPL_SPARSEOPERATORS_H

//-----------------------------------------------------------
// Classes:
// diagVector - function
// dot        - function
// dot_T      - function
//-----------------------------------------------------------

template<class T>
inline Array<1,T,Brick> diagVector(const Array<2,T,Sparse> & A)
{
  return A.engine().diagVector();
}

template<class T1, class T2, class ET>
inline Array<1,T2,ET> dot_my(const Array<2,T1,Sparse> & A,
          const Array<1,T2,ET> & X)
{
  return A.engine().dot(X);
}

template<class T1, class T2, class ET>
inline Array<1,T2,ET> dot_my_T(const Array<2,T1,Sparse> & A,
          const Array<1,T2,ET> & X)
{
  return A.engine().dot_T(X);
}

#endif // SPL_SPARSEOPERATORS_H
