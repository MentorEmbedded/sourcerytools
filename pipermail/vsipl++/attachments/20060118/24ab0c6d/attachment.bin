+	# Determine flags for LAPACK_NOOPT, used for compiling with no
+	# optimization
+        if expr "$FFLAGS" : ".*-m32" > /dev/null; then
+	  LAPACK_NOOPT="-m32"
+        elif expr "$FFLAGS" : ".*-m64" > /dev/null; then
+	  LAPACK_NOOPT="-m64"
+	else
+	  LAPACK_NOOPT=""
+	fi
+	AC_SUBST(LAPACK_NOOPT)
